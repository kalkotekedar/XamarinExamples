<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Rotating Event Binding"
             x:Class="XamarinExamples.RotatingEventBinding">

    <StackLayout
        Padding="10">

        <Label
            FontSize="Large"
            Text="Kedar"
            Rotation="{Binding Source={
                x:Reference slider},
                Path=Value,
                Mode=TwoWay}"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"/>

        <Slider
            x:Name="slider"
            Minimum="-360"
            Maximum="360"/>

        <Label
            Text="{Binding Source={
                x:Reference slider},
                Path=Value,
                StringFormat='Rotation = {0:F2} degrees'}"
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"/>

    </StackLayout>
    
</ContentPage>