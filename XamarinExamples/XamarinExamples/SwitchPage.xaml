<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Switch Page"
             x:Class="XamarinExamples.SwitchPage">

    <StackLayout
        Padding="10">

        <Label
                x:Name="ColoredLabel"
                Text="Kedar Kalkote"
                FontSize="Large"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"/>

        <Switch
            Toggled="OnSwitchToggled"
            HorizontalOptions="Center"/>

        <Label
            x:Name="DisplayLabel"
            Text="-"
            FontSize="Large"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"/>
        
    </StackLayout>
</ContentPage>